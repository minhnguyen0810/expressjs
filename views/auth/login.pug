extends ../../layouts/common
block content
  h1 Login
  if errors
    each error in errors
      p.alert.alert-danger= error

  form.form-group(action="/auth/login" method="POST")
    label(for="email") Email
    input.form-control(type="text" name="email" id="email",value=values?values.email:"" )
    label(for="password") Password
    input.form-control(type="password" name="password" id="password",value=values?values.password:"")
    button.btn.btn-success.mt-3 Login